<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.pmietlicki" name="PMietlicki Addons" version="1.0" provider-name="pmietlicki">
	<extension point="xbmc.addon.repository" name="PMietlicki Addons">
		<info compressed="false">https://github.com/pmietlicki/kodi-repo/raw/master/addons.xml</info>
		<checksum>https://github.com/pmietlicki/kodi-repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/pmietlicki/kodi-repo/raw/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>PMietlicki Addons</summary>
		<description>This repository contains addons made by Pascal Mietlicki and based on Navi-X. The idea is for you to be able to generate easily playlists on http://pascal-mietlicki.fr and access it on your TV thanks to Kodi.</description>
		<disclaimer>The owners and submitters to this repository do not host or distribute any of the content displayed by these addons nor do they have any affiliation with the content providers.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.apiportail-fr"
       name="aPiTV Portail FR"
       version="1.0"
       provider-name="aPiTV">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point="xbmc.python.script" library="default.py" >
    <provides>executable video</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>28764</minversion>
    <summary>Media Browser Addon for Kodi</summary>
    <description>TubeList plugin to see your playlist on your media center.</description>
    <website>http://www.pascal-mietlicki.fr/</website>
    <source></source>
    <email></email>
  </extension>
</addon>
</addons>
